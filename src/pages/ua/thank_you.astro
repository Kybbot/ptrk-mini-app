---
import { getLangFromUrl, useTranslations } from "@/assets/i18n/utils";

import MainLayout from "@/layouts/MainLayout.astro";

const lang = getLangFromUrl(Astro.url);
const locale = lang === "ru" ? "/" : "/ua/";
const t = useTranslations(lang);
---

<MainLayout title={t("meta.title-home")} description={t("meta.description-home")}>
	<section class="thankYou">
		<div class="thankYou__header">
			<div class="thankYou__loader">
				<svg width="56" height="56" viewBox="25 25 50 50" class="thankYou__loader--svg">
					<circle
						class="thankYou__loader--path"
						cx="50"
						cy="50"
						r="20"
						fill="none"
						stroke="#111111"
						stroke-width="1.5"></circle>
				</svg>
			</div>
			<svg
				width="56"
				height="56"
				fill="none"
				aria-hidden="true"
				viewBox="0 0 56 56"
				class="thankYou__ok"
				xmlns="http://www.w3.org/2000/svg"
			>
				<rect x="0.65" y="0.65" width="54.7" height="54.7" rx="27.35" stroke="black" stroke-width="1.3"
				></rect>
				<path
					d="M26.08 35.0352L18.961 27.932C18.8492 27.8016 18.7907 27.6338 18.7974 27.4623C18.804 27.2907 18.8752 27.128 18.9968 27.0066C19.1183 26.8852 19.2813 26.814 19.4531 26.8074C19.6249 26.8008 19.7928 26.8591 19.9234 26.9708L26.0663 33.106L38.0723 21.1288C38.2029 21.0171 38.3708 20.9587 38.5426 20.9654C38.7144 20.972 38.8774 21.0431 38.9989 21.1645C39.1205 21.2859 39.1917 21.4487 39.1983 21.6202C39.205 21.7918 39.1465 21.9595 39.0347 22.0899L26.08 35.0352Z"
					fill="#111111"></path>
			</svg>
			<svg
				width="56"
				height="56"
				fill="none"
				aria-hidden="true"
				viewBox="0 0 56 56"
				class="thankYou__error"
				xmlns="http://www.w3.org/2000/svg"
			>
				<rect x="0.65" y="0.65" width="54.7" height="54.7" rx="27.35" stroke="black" stroke-width="1.3">
				</rect>
				<g clip-path="url(#clip0_876_1033)">
					<path
						d="M20 20L36 36M20 36L36 20"
						stroke="#111111"
						stroke-width="1.3"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
				</g>
				<defs>
					<clipPath id="clip0_876_1033">
						<rect width="18" height="18" fill="white" transform="translate(19 19)"></rect>
					</clipPath>
				</defs>
			</svg>
			<h1 class="thankYou__title">{t("thankYou.title")}</h1>
			<p class="thankYou__description">{t("thankYou.description")}</p>
			<p class="thankYou__email">
				{t("thankYou.email")}
				<span class="thankYou__email--bold"></span>
			</p>
			<a href={`${locale}dashboard`} class="thankYou__link">
				{t("thankYou.link")}
				<svg
					width="17"
					height="16"
					fill="none"
					aria-hidden="true"
					viewBox="0 0 17 16"
					xmlns="http://www.w3.org/2000/svg"
				>
					<path
						d="M7.16667 11.3327L10.5 7.99935L7.16667 4.66602"
						stroke="white"
						stroke-width="1.5"
						stroke-linecap="round"
						stroke-linejoin="round"></path>
				</svg>
			</a>
		</div>
	</section>
</MainLayout>

<script src="../../assets/scripts/thankYou.ts"></script>
