---
import { getLangFromUrl } from "@/assets/i18n/utils";

type Props = {
	showMobileMenu: boolean;
};

const { showMobileMenu } = Astro.props;

const lang = getLangFromUrl(Astro.url);
const locale = lang === "ru" ? "/" : "/ua/";
---

<nav id="navigation" class={`navigation ${!showMobileMenu ? "navigation--hide" : ""}`}>
	<div class="navigation__gradient"></div>
	<div class="navigation__container">
		<div class="navigation__list">
			<a href={`${locale}`} class="navigation__link">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="24"
					height="24"
					fill="none"
					stroke="#000000"
					stroke-width="1.5"
					aria-hidden="true"
					viewBox="0 0 24 24"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
					<polyline points="9 22 9 12 15 12 15 22"></polyline>
				</svg>
				<p class="navigation__text">Главная</p>
			</a>
			<a href={`${locale}services`} class="navigation__link">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="24"
					height="24"
					fill="none"
					stroke="#000000"
					stroke-width="1.5"
					aria-hidden="true"
					viewBox="0 0 24 24"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path d="M6 2L3 6v14c0 1.1.9 2 2 2h14a2 2 0 0 0 2-2V6l-3-4H6zM3.8 6h16.4M16 10a4 4 0 1 1-8 0">
					</path>
				</svg>
				<p class="navigation__text">Услуги</p>
			</a>
			<a href={`${locale}quizzes`} class="navigation__link">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="24"
					height="24"
					fill="none"
					stroke="#000000"
					stroke-width="1.5"
					aria-hidden="true"
					viewBox="0 0 24 24"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<polyline points="9 11 12 14 22 4"></polyline>
					<path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11"></path>
				</svg>
				<p class="navigation__text">Тесты</p>
			</a>
			<a href={`${locale}dashboard`} class="navigation__link">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					width="24"
					height="24"
					fill="none"
					stroke-width="1.5"
					stroke="#000000"
					viewBox="0 0 24 24"
					aria-hidden="true"
					stroke-linecap="round"
					stroke-linejoin="round"
				>
					<path d="M5.52 19c.64-2.2 1.84-3 3.22-3h6.52c1.38 0 2.58.8 3.22 3"></path>
					<circle cx="12" cy="10" r="3"></circle>
					<circle cx="12" cy="12" r="10"></circle>
				</svg>
				<p class="navigation__text">Кабинет</p>
			</a>
		</div>
	</div>
</nav>
